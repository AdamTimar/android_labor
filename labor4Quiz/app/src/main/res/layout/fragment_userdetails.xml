<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/youtNameIsTextTextView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/your_name_is_textview_height"
        android:layout_marginTop="@dimen/your_name_is_textview_margin_top"
        android:gravity="center"
        android:text="@string/your_name_is_textview_text"
        android:textColor="@color/quiz_text_color"
        android:textSize="@dimen/your_name_is_textview_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/yourNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/your_name_margin_top"
        android:gravity="center"
        android:textColor="@color/name_text_color"
        android:textSize="@dimen/your_name_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/youtNameIsTextTextView"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>