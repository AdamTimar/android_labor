<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.TimeLineFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/myMarketToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/form_background_color"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bazaar_logo" />


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/myMarketAvatarIcon"
                android:layout_width="@dimen/avatar_width"
                android:layout_height="@dimen/avatar_height"
                android:layout_marginStart="@dimen/avatar_margin_start"
                android:scaleType="centerCrop"
                android:src="@drawable/avatar"
                app:shapeAppearance="@style/ShapeAppearance.App.CircleImageView" />
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <SearchView
        android:id = "@+id/myMarketSearchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myMarketToolbar"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/myMarketdropStatus"
        android:layout_width="@dimen/spinner_width"
        android:layout_height="@dimen/spinner_height"
        android:drawSelectorOnTop="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myMarketSearchView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/myMarketRecyclerView"
        android:background="@color/timeLineRecViewBgColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/time_line_recycler_view_margin_top"/>
</androidx.constraintlayout.widget.ConstraintLayout>