<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="registerEditTextStyle">
        <item name="android:layout_height">@dimen/user_details_text_input_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:background">@drawable/user_details_text_input_layout_border</item>
        <item name="android:padding">@dimen/user_details_text_input_padding</item>
    </style>

    <style name="registerTextInputLayoutStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:background">@null</item>
    </style>

    <style name="roundedButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_button_border</item>
    </style>

    <style name="roundedButtonNoBackGroundColorStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_button_no_bg_color_border</item>
    </style>


</resources>